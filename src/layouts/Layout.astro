<style>
  html,
  body {
    margin: 0;
    padding: 0;
    width: 100%;
    min-height: 100vh;
    background-color: #f8f4f0;
  }

  body {
    display: flex;
    flex-direction: column;
  }

  .flex-wrapper {
    flex: 1;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  .flex-grow {
    flex: 1;
  }
</style>
